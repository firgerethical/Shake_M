<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvAdminPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de AdministraciÃ³n"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnUsuarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuarios"
        app:layout_constraintTop_toBottomOf="@id/tvAdminPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnConsultas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reg. Consultas"
        app:layout_constraintTop_toBottomOf="@id/btnUsuarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>