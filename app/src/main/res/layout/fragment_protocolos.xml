<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8DA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="356dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:contentDescription="Infografía"
            android:scaleType="centerCrop"
            android:src="@drawable/infografia" />

        <Button
            android:id="@+id/xVerVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:backgroundTint="#B73D3D"
            android:fontFamily="@font/montserrat_medium"
            android:text="¿Qué hacer?"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="¿Donde te encuentras?"
            android:textColor="#000"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:padding="4dp">

            <Button
                android:id="@+id/xCasa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#B73D3D"
                android:fontFamily="@font/montserrat_medium"
                android:text="CASA"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/xEscuela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#B73D3D"
                android:fontFamily="@font/montserrat_medium"
                android:text="ESCUELA"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/xTransporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#B73D3D"
                android:fontFamily="@font/montserrat_medium"
                android:text="TRANSPORTE"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/xCalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#B73D3D"
                android:fontFamily="@font/montserrat_medium"
                android:text="CALLE"
                android:textColor="#FFFFFF" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/xInstrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
