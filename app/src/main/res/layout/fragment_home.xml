<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8DA">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xUltimoSismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="ÚLTIMO SISMO"
                android:textColor="#000000"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/ximgSismo"
                android:layout_width="match_parent"
                android:layout_height="516dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Mapa del sismo"
                android:scaleType="centerCrop"
                android:src="@drawable/intensity" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIntensidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#00BCD4"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/xIntensidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/xMagnitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Magnitud: --"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/xProfundidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Profundidad: --"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/xLocalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Localización: --"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/xHaceTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Hace: --"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


